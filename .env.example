# Application
APP_NAME="GenAI Coach API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/genai_coach
DB_ECHO=False

# Security
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:8081","exp://192.168.1.100:8081"]
CORS_ALLOW_CREDENTIALS=True

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=genai-coach-uploads
S3_PRESIGNED_URL_EXPIRATION=3600

# AI Services - OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_WHISPER_MODEL=whisper-1

# AI Services - Groq
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# LangSmith (Observability for AI operations)
LANGSMITH_TRACING=false
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=genai-mock-interview

# Third-party AI Services (Optional)
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-livekit-url
CARTESIA_API_KEY=your-cartesia-api-key
MURF_API_KEY=your-murf-api-key

# Search Services (for RAG enhancement)
EXA_API_KEY=your-exa-api-key
SERPER_API_KEY=your-serper-api-key
TAVILY_API_KEY=your-tavily-api-key

# Vector Database
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Redis (Optional - for caching/queue)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Sentry (for error tracking and performance monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0
